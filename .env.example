# Environment Variable Configuration for Allele
#
# Copy this file to .env and fill in your values.
# The .env file is git-ignored by default for security.

# ============================================================================
# Agent Configuration
# ============================================================================

# LLM model to use (e.g., "gpt-4", "gpt-4-turbo", "claude-3-opus")
AGENT__MODEL_NAME=gpt-4

# Sampling temperature (0.0 = deterministic, 1.0 = creative)
AGENT__TEMPERATURE=0.7

# Maximum tokens to generate per response
AGENT__MAX_TOKENS=2048

# Enable streaming responses (true/false)
AGENT__STREAMING=true

# Enable conversation memory (true/false)
AGENT__MEMORY_ENABLED=true

# Enable evolutionary adaptation (true/false)
AGENT__EVOLUTION_ENABLED=true

# Enable Kraken LNN processing (true/false)
AGENT__KRAKEN_ENABLED=true

# ============================================================================
# Evolution Configuration
# ============================================================================

# Number of genomes in population
EVOLUTION__POPULATION_SIZE=100

# Maximum number of generations to evolve
EVOLUTION__GENERATIONS=50

# Probability of gene mutation (0.0-1.0)
EVOLUTION__MUTATION_RATE=0.1

# Probability of parent crossover (0.0-1.0)
EVOLUTION__CROSSOVER_RATE=0.8

# Fraction of best individuals to keep (0.0-1.0)
EVOLUTION__SELECTION_PRESSURE=0.2

# Preserve best genomes (true/false)
EVOLUTION__ELITISM_ENABLED=true

# Size of tournament for selection
EVOLUTION__TOURNAMENT_SIZE=3

# If true, evolution will create new genome objects (immutable flow).
# If false (default), evolution mutates genomes in-place for better performance.
EVOLUTION__IMMUTABLE_EVOLUTION=false

# Convenience flag for HPC mode (defaults to true). When enabled, evolution will
# favor in-place mutation and lower logging to reduce memory and improve speed.
EVOLUTION__HPC_MODE=true

# ============================================================================
# Kraken LNN Configuration
# ============================================================================

# Size of the liquid reservoir
KRAKEN__RESERVOIR_SIZE=100

# Connection density in the reservoir (0.0-1.0)
KRAKEN__CONNECTIVITY=0.1

# Size of temporal memory buffer
KRAKEN__MEMORY_BUFFER_SIZE=1000

# ============================================================================
# Liquid Dynamics Configuration
# ============================================================================

# Flow resistance in the liquid (0.0-1.0)
LIQUID_DYNAMICS__VISCOSITY=0.1

# Affects random fluctuations (0.0-2.0)
LIQUID_DYNAMICS__TEMPERATURE=1.0

# Influences activation thresholds (0.0-2.0)
LIQUID_DYNAMICS__PRESSURE=1.0

# Information propagation speed (0.0-1.0)
LIQUID_DYNAMICS__FLOW_RATE=0.5

# Non-linear dynamics (0.0-0.2)
LIQUID_DYNAMICS__TURBULENCE=0.05

# ============================================================================
# API Keys (if using external LLM providers)
# ============================================================================

# Uncomment and fill in your API keys as needed
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# COHERE_API_KEY=...

# ============================================================================
# Notes
# ============================================================================
#
# 1. Use double underscores (__) to separate nested settings
#    Example: AGENT__MODEL_NAME sets settings.agent.model_name
#
# 2. Boolean values: use "true" or "false" (lowercase)
#
# 3. Numeric values: no quotes needed
#    Example: EVOLUTION__POPULATION_SIZE=100
#
# 4. String values: quotes optional
#    Example: AGENT__MODEL_NAME=gpt-4
#
# 5. This file should NOT be committed to version control
#    Always use .env.example for documentation 
